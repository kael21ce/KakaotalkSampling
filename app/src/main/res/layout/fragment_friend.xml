<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/MyProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/myProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:maxWidth="80dp"
            android:maxHeight="80dp"
            android:paddingStart="0dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/default_profile" />

        <LinearLayout
            android:id="@+id/verFor2Text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MyName"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/myState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="my state message" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/multiProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myMultiprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내 멀티 프로필" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/birthdayFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="생일인 친구" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/UpdateFriendProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <TextView
        android:id="@+id/numFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="친구 n" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friendRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>